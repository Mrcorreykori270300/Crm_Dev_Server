@model List<Inwinteck_CRM.Models.userlist>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<div class="page-header">
    <div class="container-fluid d-sm-flex justify-content-between">
        <h4>Users</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Security</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </nav>
    </div>
</div>


<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <!-- Basic Forms -->
            <div class="card">

                <!-- /.box-header -->
                <div class="card-body">
                    <div class="row">

                        <div class="col-md-12 col-sm-12 text-center">
                            <a href="@Url.Action("CreateUsers","Security")" class="btn btn-info"> Create Users</a>
                        </div>

                    </div>
                </div>
            </div>


            <div class="card">

                <div class="card-body ">

                    <div class="table-responsive dt-responsive">
                        <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                                @if (Model.Count > 0)
                                {
                                    foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("editUsers","Security",new {id = i.id })" title="edit"><i class="fa fa-edit"></i></a>

                                                <a href="@Url.Action("viewUsers", "Security", new { id = i.id })" title="View" style="margin-left: 10px;"><i class="fa fa-eye" aria-hidden="true"></i></a>

                                            </td>
                                            <td>@i.Name</td>
                                            <td>@i.email</td>
                                            <td>@i.role</td>
                                            @if (@i.status == 1)
                                            {

                                                <td><a href="@Url.Action("statusUsers", "Security", new { id = i.id })" )><span class="badge badge-success mr-2 d-sm-inline d-none">Active</span></a></td>

                                            }
                                            else
                                            {
                                                <td><a href="@Url.Action("statusUsers","Security", new {id = i.id })" )><span class="badge badge-danger mr-2 d-sm-inline d-none">Deactive</span></a></td>

                                            }
                                        </tr>

                                    }
                                }
                                else
                                {
                                    <tr><td colspan="2" class="text-center"> <code style="font-size:20px;"> <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <br /> No Record Found </code></td></tr>
                                }
</table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


<div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content  text-center">
            <div class="modal-header">
                <h4 class="modal-title text-center "><i class="fa fa-info-circle" aria-hidden="true"></i> Information</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="font-size: 20px;">@TempData["message"] </p>
            </div>
            <div class="modal-footer">
                <!-- <button type="button" class="btn btn-primary">Save changes</button> -->

                <a href="#" data-dismiss="modal" aria-label="Close" class="btn btn-info">OK</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section Scripts
{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                $('#myModal').modal('show');
            };
        </script>
    }
}







